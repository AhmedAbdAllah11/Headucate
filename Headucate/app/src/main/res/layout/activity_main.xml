<?xml version="1.0" encoding="UTF-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/simple"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/sport"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/c_btn"
        android:drawableTop="@drawable/ic_sport"
        android:onClick="btn_sport"
        android:paddingTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/symptoms" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:text="الرياضة"
        android:textColor="#000"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@id/sport"
        app:layout_constraintStart_toStartOf="@id/sport"
        app:layout_constraintTop_toBottomOf="@+id/sport" />

    <Button
        android:id="@+id/symptoms"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/c_btn"
        android:drawableTop="@drawable/search"
        android:onClick="btn_symptoms"
        android:paddingTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/symtxt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/symtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="الأعراض"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@id/symptoms"
        app:layout_constraintStart_toStartOf="@id/symptoms"
        app:layout_constraintTop_toBottomOf="@+id/symptoms" />

    <Button
        android:id="@+id/awerness"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/c_btn"
        android:drawableTop="@drawable/hands2"
        android:onClick="btn_awarness"
        android:paddingTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/symptoms" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="الوقاية"
        android:textColor="#000"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@id/awerness"
        app:layout_constraintStart_toStartOf="@id/awerness"
        app:layout_constraintTop_toBottomOf="@+id/awerness" />

</android.support.constraint.ConstraintLayout>